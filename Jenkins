def Authors = currentBuild.changeSets.collect { set -> set.collect { entry -> entry.author.fullName }}.flatten()

pipeline {
    agent {
        docker { image 'ubuntu:16.04'}
    } 
    stages {
    
        stage('test') {
            steps {
                sh '''
                ls -l
                echo "${Authors}"
                '''
            }
        }
    }
}
