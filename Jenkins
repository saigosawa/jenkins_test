def author = sh (
      script: 'cd jenkins_test && git --no-pager show -s --format=\'%an\'',
      returnStdout: true
).trim()

pipeline {
    agent {
        docker { image 'ubuntu:16.04'}
    } 
    stages {
        stage('test') {
            steps {
                sh '''
                echo ${author}
                '''
            }
        }
    }
}
